@{
    ViewData["Title"] = "Send Phising Email";
}

<div class="container-fluid px-4">
    <div class="row my-4">
        <h1>Send Phising Email</h1>
    </div>
    <div class="row">
        <form>
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect">
                            <option selected>Select one template</option>
                            <option value="e0d07774-100d-4805-bf8e-6a1e1136005b">{Template1}</option>
                            <option value="80b226a1-2d19-4bb4-a429-91b8c15f4f53">{Template2}</option>
                            <option value="5ebcfcd9-8841-4ad6-9a51-e12e6bdedf34">{Template3}</option>
                        </select>
                        <label for="floatingSelect">Email Template</label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label class="form-label fw-bold">Enter Email Addresses</label>
                    <div class="input-group mb-3">
                        <button class="btn btn-danger" id="DeleteRow" type="button">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <input type="email" class="form-control m-input">
                    </div>
                    <div id="newinput"></div>
                    <button id="rowAdder" type="button" class="btn btn-primary">
                        <i class="fas fa-plus"></i> ADD
                    </button>
                </div>
            </div>
            <div class="mt-4 mb-0">
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-block">Send</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $("#rowAdder").click(function () {
            newRowAdd =
                '<div id="row"> <div class="input-group mb-3">' +
                '<button class="btn btn-danger" id="DeleteRow" type="button">' +
                '<i class="fas fa-trash"></i> Delete</button>' +
                '<input type="email" class="form-control m-input"> </div> </div>';

            $('#newinput').append(newRowAdd);
        });

        $("body").on("click", "#DeleteRow", function () {
            $(this).parents("#row").remove();
        })
    </script>
}