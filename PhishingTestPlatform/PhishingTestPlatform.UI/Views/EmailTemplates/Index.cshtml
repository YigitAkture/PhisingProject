@model IEnumerable<PhishingTestPlatform.Data.Models.EmailTemplates>
﻿
@{
    ViewData["Title"] = "Email Templates";
}

<div class="container-fluid px-4">
    <div class="row my-4">
        <div class="col-9">
            <h1>Email Templates</h1>
        </div>
        <div class="col-3 my-auto">
            <a class="btn btn-success float-end" asp-area="" asp-controller="EmailTemplates" asp-action="Create">
                <i class="fas fa-plus"></i> Create
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Template Name</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TemplateName</td>
                        <td>
                            <a class="btn btn-danger float-end" asp-area="" asp-controller="EmailTemplates" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a class="btn btn-primary float-end mx-2" asp-area="" asp-controller="EmailTemplates" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-pen"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>